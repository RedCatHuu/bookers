<div class="edit-main">
  <h1>Editing Book</h1>

  <%= form_with model: @book, local: true do |f| %>
  
 <%= render 'error_message', model: @book %>
   
    <h4>Title</h4>
    <%= f.text_field :title %>
  
    <h4>Body</h4>
    <%= f.text_area :body %>
    <p></p>
    <%= f.submit 'Update Book' %>
  <% end %>
  
  </br>
  <span class="button"><%= link_to "Show", book_path(@book) %></span>
  <span>|</span>
  <span class="button"><%= link_to "Back", books_path %></span>
</div>